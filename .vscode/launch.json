{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Focuswave.FocusSessionService Debug",
            "type": "dotnet",
            "preLaunchTask": "build",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Focuswave.FocusSessionService/Focuswave.FocusSessionService.csproj"
        },
        {
            "name": "C#: Focuswave.FocusSessionService Watch (Hot Reload)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "watch-focussession",
            "program": "${workspaceFolder}/src/Focuswave.FocusSessionService/bin/Debug/net8.0/Focuswave.FocusSessionService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Focuswave.FocusSessionService",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Focuswave",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}